      // 从 EJS 变量中获取当前登录用户的用户名  
      const username = currentUser.username; // 假设已从后端传递到全局变量 
      // 将编号设置到编号输入框中  
      document.getElementById("modalNumber").value = username;

      // 发起请求查询  
      fetch(`/gerenxinxiguanli/fetch?number=${username}`)
