<%- include('../header') %>  

<div class="container mx-auto px-4 py-8">  
    <h1 class="text-2xl font-bold mb-6">添加新用户</h1>  

    <% if (typeof error !== 'undefined' && error) { %>  
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">  
            <span class="block sm:inline"><%= error %></span>  
        </div>  
    <% } %>  

    <form action="/users/new" method="POST" class="max-w-lg">  
        <div class="mb-4">  
            <label for="username" class="block text-gray-700 font-bold mb-2">用户名</label>  
            <input type="text" name="username" id="username" required class="w-full px-3 py-2 border rounded">  
        </div>  
        <div class="mb-4">  
            <label for="password" class="block text-gray-700 font-bold mb-2">密码</label>  
            <input type="password" name="password" id="password" required class="w-full px-3 py-2 border rounded">  
        </div>  
        <div class="mb-4">  
            <label for="email" class="block text-gray-700 font-bold mb-2">邮箱</label>  
            <input type="email" name="email" id="email" class="w-full px-3 py-2 border rounded">  
        </div>  
        <div class="mb-4">  
            <label for="role" class="block text-gray-700 font-bold mb-2">角色</label>  
            <select name="role" id="role" class="w-full px-3 py-2 border rounded">  
                <option value="user" selected>普通用户</option>  
                <option value="admin">管理员</option>  
            </select>  
        </div>  
        <div class="flex items-center">  
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-4">提交</button>  
            <a href="/users" class="text-gray-700 hover:text-gray-900">取消</a>  
        </div>  
    </form>  
</div>  

<%- include('../footer') %>